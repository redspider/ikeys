<!DOCTYPE html>
<html>
    <head>
        <title>OSX Remote panel</title>
        <link rel="stylesheet" href="/static/css/app.css?3" />
        <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <script>
            $(function () {
                $('.status').text("Ready");

                $('.btn').bind('touchstart mousedown', function(e) {
                        e.preventDefault();
                        $('.status').text($(this).data('trigger'));
                        $.post('/trigger',{'trigger': $(this).data('trigger'), 'time': new Date()}, function (data) {$('.status').text(data); });
                        $('.status').text("Done");
                    }
                );
            });
        </script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <a class="btn btn-panel" data-trigger="bell" href="#">Bell</a>
                    <a class="btn btn-panel" data-trigger="expose" href="#">Expos√©</a>
                    <a class="btn btn-panel" data-trigger="chrome" href="#">Chrome</a>
                    <a class="btn btn-panel" data-trigger="pycharm" href="#">PyCharm</a>
                    <a class="btn btn-panel" data-trigger="textual" href="#">Textual</a>
                    <a class="btn btn-panel" data-trigger="sparrow" href="#">Sparrow</a>
                    <a class="btn btn-panel" data-trigger="mute" href="#">Mute</a>
                    <a class="btn btn-panel btn-danger" data-trigger="lock" href="#">Lock screen</a>
                    <div class="status"></div>
                </div>
            </div>
        </div>
    </body>
</html>